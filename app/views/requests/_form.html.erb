<%= form_with( model: @request , local: true) do |f| %>
    <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true, autocomplete: "title" %>
    </div>
    <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description, autofocus: true, autocomplete: "description" %>
    </div>
    <div class="field">
        <%= f.label "Request Type" %>
        <%= f.select(:req_type, options_for_select(["support", "trade"])) %>
    </div>
    <div class="field">
        <%= f.submit%>
    </div>
<% end %>