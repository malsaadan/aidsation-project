<h1>All Requests</h1>
<% @requests.each do |request| %>
    <% if request.status == "pending"%>
    <h5>Title: <%= link_to request.title, request_path(request) %></h5>
    <p>Description: <%= request.description %></p>
    <p>Type of request: <%= request.req_type %></p>
    <%= link_to "Accept", new_sponsorship_path(:request_id => request.id, :user_id => current_user.id) %>
    <% end %>
<% end %>