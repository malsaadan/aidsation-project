<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class ="form-row">
      <div class="form-group col-md-6">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" , :class => "form-control"%>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "name@example.com", :class => "form-control"%>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
  </div>

  <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" , :class => "form-control"%>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , :class => "form-control"%>
      </div>
  </div>

  <div class="form-row">
     <div class="form-group col-md-6">
      <%= f.label :type%>
      <%= f.select(:type, ["Recipient", "Provider"], {}, {:class => "form-control"} )%>
    </div>
  </div>
  
  <div class=form-row>
    <div class="form-group col-md-6" >
      <%= f.submit "Sign up" , :class => "btn btn-primary"%>
    </div>
  </div>
<% end %>

<span>Already have an account? <%= render "devise/shared/links" %></span>
